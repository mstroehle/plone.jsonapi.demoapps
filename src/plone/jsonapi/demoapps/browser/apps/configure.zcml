<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plone">

  <browser:page
      for="*"
      name="todoapp"
      class=".views.TodoView"
      permission="zope2.View"
      />

  <!-- Register static directory for JS resources -->
  <browser:resourceDirectory
      name="static"
      directory="static" />

</configure>
